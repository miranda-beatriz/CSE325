@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@code {
    [Parameter]
    public string? Message { get; set; }
}
