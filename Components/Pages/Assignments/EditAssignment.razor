@page "/assignments/edit/{id:int}"
@using Microsoft.AspNetCore.Authorization
@using StudySync.Data
@using StudySync.Services
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject AssignmentService AssignmentService
@inject CourseService CourseService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Edit Assignment - StudySync</PageTitle>

<div class="page-header">
    <h1>✏️ Edit Assignment</h1>
</div>

@if (isLoading)
{
    <div class="loading">Loading assignment...</div>
}
else if (assignment == null)
{
    <div class="alert alert-danger">Assignment not found.</div>
}
else
{
    <div class="form-container">
        <EditForm Model="@assignment" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="form-group">
                <label for="title">Assignment Title *</label>
                <InputText id="title" @bind-Value="assignment.Title" class="form-control" />
                <ValidationMessage For="@(() => assignment.Title)" />
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <InputTextArea id="description" @bind-Value="assignment.Description" class="form-control" rows="4" />
                <ValidationMessage For="@(() => assignment.Description)" />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="course">Course *</label>
                    <InputSelect id="course" @bind-Value="assignment.CourseId" class="form-control">
                        @foreach (var course in courses)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => assignment.CourseId)" />
                </div>

                <div class="form-group">
                    <label for="duedate">Due Date *</label>
                    <InputDate id="duedate" @bind-Value="assignment.DueDate" class="form-control" />
                    <ValidationMessage For="@(() => assignment.DueDate)" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="priority">Priority</label>
                    <InputSelect id="priority" @bind-Value="assignment.Priority" class="form-control">
                        <option value="@AssignmentPriority.Low">Low</option>
                        <option value="@AssignmentPriority.Medium">Medium</option>
                        <option value="@AssignmentPriority.High">High</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label for="status">Status</label>
                    <InputSelect id="status" @bind-Value="assignment.Status" class="form-control">
                        <option value="@AssignmentStatus.ToDo">To Do</option>
                        <option value="@AssignmentStatus.InProgress">In Progress</option>
                        <option value="@AssignmentStatus.Done">Done</option>
                    </InputSelect>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="/assignments" class="btn btn-secondary">Cancel</a>
            </div>
        </EditForm>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Assignment? assignment;
    private List<Course> courses = new();
    private bool isLoading = true;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(userId))
        {
            assignment = await AssignmentService.GetAssignmentByIdAsync(Id, userId);
            courses = await CourseService.GetUserCoursesAsync(userId);
        }

        isLoading = false;
    }

    private async Task HandleSubmit()
    {
        if (!string.IsNullOrEmpty(userId) && assignment != null)
        {
            await AssignmentService.UpdateAssignmentAsync(assignment, userId);
            NavigationManager.NavigateTo("/assignments");
        }
    }
}